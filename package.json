{
  "name": "@hubstairs/display-controller",
  "version": "0.0.0",
  "description": "Interact with and control an embedded Hubstairs display.",
  "license": "MIT",
  "author": "Guillaume HERTAULT <gh@hubstairs.com>",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "BABEL_ENV=production rollup -c",
    "lint": "eslint src",
    "test": "jest",
    "prettier:fix": "prettier --write '**/*.{js,jsx,json,md,css,scss,sh,yml,yaml,html}'"
  },
  "main": "build/player.js",
  "module": "build/player.esm.js",
  "keywords": [
    "hubstairs",
    "display",
    "api",
    "iframe",
    "embed",
    "javascript",
    "postMessage"
  ],
  "dependencies": {
    "native-promise-only": "0.8.1",
    "weakmap-polyfill": "2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jquery": "^3.4.1",
    "lint-staged": "^10.0.3",
    "prettier": "^1.19.1",
    "rollup": "^1.30.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-uglify": "^6.0.4",
    "uglify-js": "^3.7.6",
    "whatwg-fetch": "^3.0.0",
    "xhr2": "0.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,json,md,css,scss,yml,yaml,html}": [
      "prettier -l"
    ]
  }
}
