{
  "name": "@hubstairs/display-controller",
  "version": "0.0.0",
  "description": "Interact with and control an embedded Hubstairs display.",
  "license": "MIT",
  "author": "Guillaume HERTAULT <gh@hubstairs.com>",
  "scripts": {
    "start": "NODE_ENV=development rollup -c --watch",
    "build": "NODE_ENV=production rollup -c",
    "lint": "eslint src",
    "test": "jest",
    "prettier:fix": "prettier --write '**/*.{js,jsx,json,md,css,scss,sh,yml,yaml,html}' --ignore-path .gitignore"
  },
  "main": "build/display.js",
  "module": "build/display.esm.js",
  "files": [
    "build"
  ],
  "keywords": [
    "hubstairs",
    "display",
    "api",
    "iframe",
    "embed",
    "javascript",
    "postMessage"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@rollup/plugin-replace": "^2.3.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-fetch-mock": "^3.0.3",
    "jquery": "^3.4.1",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-terser": "^5.3.0",
    "uglify-js": "^3.8.0",
    "whatwg-fetch": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,json,md,css,scss,yml,yaml,html}": [
      "prettier -l"
    ]
  }
}
